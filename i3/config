##################################################
# i3wm core settings
##################################################
# Mod4 -> WindowsKey | Mod1 -> MetaKey
set $mod Mod4
set $mod2 Mod1
# Font settings
font pango:monospace 8 # Fallback 2
font pango:DejaVu Sans Mono 8 # Fallback 1
font pango:Hack, FontAwesome 8
# Other settings
floating_modifier $mod
focus_follows_mouse no
workspace_auto_back_and_forth yes
# Custom variables
set $music_ws ï†¼

##################################################
# i3 movement keybinds
##################################################
# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right
# switch to workspace
bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9
bindsym $mod+0 workspace 10
bindsym $mod+m workspace $music_ws
# move workpspaces
bindsym $mod+Ctrl+h move workspace to output left
bindsym $mod+Ctrl+j move workspace to output down
bindsym $mod+Ctrl+k move workspace to output up
bindsym $mod+Ctrl+l move workspace to output right
# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace 1
bindsym $mod+Shift+2 move container to workspace 2
bindsym $mod+Shift+3 move container to workspace 3
bindsym $mod+Shift+4 move container to workspace 4
bindsym $mod+Shift+5 move container to workspace 5
bindsym $mod+Shift+6 move container to workspace 6
bindsym $mod+Shift+7 move container to workspace 7
bindsym $mod+Shift+8 move container to workspace 8
bindsym $mod+Shift+9 move container to workspace 9
bindsym $mod+Shift+0 move container to workspace 10

##################################################
# Actions keybinds
##################################################
# Aplications
bindsym $mod+Return exec i3-sensible-terminal
bindsym $mod+space exec --no-startup-id "rofi -show drun"
bindsym $mod+Tab exec --no-startup-id "rofi -show window"
bindsym $mod+$mod2+l exec --no-startup-id "$HOME/.dotfiles/bin/lockscreen"
# Actions
bindsym $mod+Shift+q kill
bindsym $mod+t split t
bindsym $mod+f fullscreen toggle
bindsym $mod+g fullscreen global
bindsym $mod+Shift+f floating toggle
bindsym $mod+a focus parent
bindsym $mod+d focus child
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"
bindsym $mod+w layout toggle
bindsym $mod+Shift+space focus mode_toggle
# scratchpad
bindsym $mod+Shift+minus move scratchpad
bindsym $mod+minus scratchpad show
# Multimedia keys
bindsym XF86AudioRaiseVolume exec amixer -q set Master 5%+ unmute
bindsym XF86AudioLowerVolume exec amixer -q set Master 5%- unmute
bindsym XF86AudioMute exec amixer -q set Master toggle
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous
bindsym XF86AudioStop exec playerctl stop
# Screen brightness media keys
bindsym XF86MonBrightnessUp exec xbacklight -inc 10 # increase screen brightness
bindsym XF86MonBrightnessDown exec xbacklight -dec 10 # decrease screen brightness
# Screenshots (with Scrot)
bindsym Print exec --no-startup-id scrot "$HOME/Pictures/scrot_%Y-%m-%d_%H%M%S.png" && notify-send "Screenshot taken"
bindsym --release Shift+Print exec scrot -s "$HOME/Pictures/scrot_%Y-%m-%d_%H%M%S.png" && notify-send "Screenshot taken"
bindsym Control+Print exec --no-startup-id sleep 5 && scrot "$HOME/Pictures/scrot_%Y-%m-%d_%H%M%S.png" && notify-send "Screenshot taken"
bindsym --release Control+Shift+Print exec sleep 5 && notify-send "Screenshot ready" && scrot -s "$HOME/Pictures/scrot_%Y-%m-%d_%H%M%S.png" && notify-send "Screenshot taken"

##################################################
# Custom modes
##################################################
mode "resize" {
  bindsym h resize shrink width 10 px or 10 ppt
  bindsym j resize grow height 10 px or 10 ppt
  bindsym k resize shrink height 10 px or 10 ppt
  bindsym l resize grow width 10 px or 10 ppt

  bindsym Return mode "default"
  bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

##################################################
# i3-gaps related
##################################################
set $default_gaps_inner 5
set $default_gaps_outer 2

gaps inner $default_gaps_inner
gaps outer $default_gaps_outer

for_window [class="^.*"] border pixel 1
smart_borders no_gaps

set $mode_gaps gaps
set $mode_gaps_outer outer gaps
set $mode_gaps_inner inner gaps
bindsym $mod+Shift+g mode "$mode_gaps"

mode "$mode_gaps" {
  bindsym o mode "$mode_gaps_outer"
  bindsym i mode "$mode_gaps_inner"

  bindsym 0 mode "default", exec --no-startup-id i3-msg "gaps inner current set 0" && i3-msg "gaps outer current set 0"
  bindsym d mode "default", exec --no-startup-id i3-msg "gaps inner current set $default_gaps_inner" && i3-msg "gaps outer current set $default_gaps_outer"

  bindsym Return mode "default"
  bindsym Escape mode "default"
}

mode "$mode_gaps_inner" {
  bindsym plus gaps inner current plus 5
  bindsym minus gaps inner current minus 5
  bindsym 0 mode "default", gaps inner current set 0
  bindsym d mode "default", gaps inner current set $default_gaps_inner

  bindsym Shift+plus gaps inner all plus 5
  bindsym Shift+minus gaps inner all minus 5
  bindsym Shift+0 mode "default", gaps inner all set 0
  bindsym Shift+d mode "default", gaps inner all set $default_gaps_inner

  bindsym Return mode "default"
  bindsym Escape mode "default"
}

mode "$mode_gaps_outer" {
  bindsym plus  gaps outer current plus 5
  bindsym minus gaps outer current minus 5
  bindsym 0     mode "default", gaps outer current set 0
  bindsym d     mode "default", gaps outer current set $default_gaps_outer

  bindsym Shift+plus  gaps outer all plus 5
  bindsym Shift+minus gaps outer all minus 5
  bindsym Shift+0     mode "default", gaps outer all set 0
  bindsym Shift+d     mode "default", gaps outer all set $default_gaps_outer

  bindsym Return mode "default"
  bindsym Escape mode "default"
}

##################################################
# Custom assignments (mode or workspace)
##################################################
for_window [window_role="pop-up"] floating enable
for_window [window_role="bubble"] floating enable
for_window [window_role="task_dialog"] floating enable
for_window [window_role="Preferences"] floating enable
for_window [class="Spotify"] move container to workspace $music_ws

##################################################
# i3wm status bar
##################################################
bar {
  status_command py3status -c $HOME/.i3/i3status.conf
  position top
  font pango:Hack, FontAwesome 10

  # Atom One Dark
  colors {
    background #282c34
    statusline #abb2bf
    separator  #abb2bf
    #                  Border  BG      Text
    focused_workspace  #abb2bf #abb2bf #282c34
    active_workspace   #5c6370 #5c6370 #282c34
    inactive_workspace #5c6370 #282c34 #5c6370
    urgent_workspace   #5c6370 #e06c75 #282c34
  }
}

##################################################
# Colors (Atom One Dark)
##################################################
#                       BORDER  BG      TEXT    IND     CHILD
client.focused          #5c6370 #abb2bf #282c34
client.focused_inactive #5c6370 #5c6370 #282c34
client.unfocused        #5c6370 #282c34 #5c6370
client.urgent           #5c6370 #e06c75 #282c34

##################################################
# Autolaunch
##################################################
exec --no-startup-id xmodmap ~/.Xmodmap
exec --no-startup-id setxkbmap -layout us -option ctrl:nocaps -variant altgr-intl
exec --no-startup-id numlockx on
exec --no-startup-id dunst -config ~/.dunstrc
exec --no-startup-id blueman-applet
exec --no-startup-id nm-applet
exec --no-startup-id dropbox start
exec --no-startup-id eval $(/usr/bin/gnome-keyring-daemon --start --components=pkcs11,secrets,ssh)
exec udiskie --automount --notify --tray
