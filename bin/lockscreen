#!/usr/bin/env bash
# Lock screen with a blurry screenshot

# Nord Theme colors: https://arcticicestudio.github.io/nord/
# Polar Night
nord0='#2e3440ff'
nord1='#3b4252ff'
nord2='#434c5eff'
nord3='#4c566aff'
# Snow Storm
nord4='#d8dee9ff'
nord5='#e5e9f0ff'
nord6='#eceff4ff'
# Frost
nord7='#8fbcbbff'
nord8='#88c0d0ff'
nord9='#81a1c1ff'
nord10='#5e81acff'
# Aurora
nord11='#bf616aff'
nord12='#d08770ff'
nord13='#ebcb8bff'
nord14='#a3be8cff'
nord15='#b48eadff'

i3lock \
  --screen 1 \
  --blur 10 \
  --clock \
  --indicator \
  --radius 200 \
  --ringcolor=$nord10 \
  --insidecolor=$nord3 \
  --ringvercolor=$nord13 \
  --insidevercolor=$nord14 \
  --verifcolor=$nord6 \
  --veriftext="Unleashing your power..." \
  --verif-font=Hack \
  --verifsize=22 \
  --ringwrongcolor=$nord11 \
  --insidewrongcolor=$nord12 \
  --wrongcolor=$nord6 \
  --wrongtext="You shall not pass!!" \
  --wrong-font=Hack \
  --wrongsize=20 \
  --keyhlcolor=$nord5 \
  --separatorcolor=$nord3 \
  --timecolor=$nord6 \
  --timestr="%H:%M:%S" \
  --time-font=Hack \
  --timesize=40 \
  --datecolor=$nord6 \
  --date-font=Hack \
  --datesize=20 \
  --datestr="%A, %d %B %Y"
